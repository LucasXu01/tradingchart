<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/yuanjiao"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/yuanjiao_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="分组"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_scale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="0.01"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_bigger"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="6dp"
                    android:src="@mipmap/bigger" />

                <ImageView
                    android:id="@+id/img_smaller"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:layout_toLeftOf="@+id/img_bigger"
                    android:padding="6dp"
                    android:src="@mipmap/smaller" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#E7E8EB">

                <TextView
                    android:id="@+id/tv_center"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_zonge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/tv_center"
                    android:text="总额"
                    android:textColor="#1d2737"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_center"
                    android:text="价格(BNB)"
                    android:textColor="#1d2737"
                    android:textSize="12sp" />


            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/shendutu_recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="#e7e8eb" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#e7e8eb" />

                <TextView
                    android:id="@+id/tv_center2"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_chuanbo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/tv_center2"
                    android:text="BNB传播"
                    android:textColor="#A1A8B5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_juti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_center2"
                    android:text="0.00012BNB"
                    android:textColor="#A1A8B5"
                    android:textSize="12sp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/shendutu_recycleview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="交易历史记录"
                android:textColor="#99A0A9"
                android:textSize="16sp" />



            <!--交易历史记录-->


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/yuanjiao_1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="成交量"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#E7E8EB">

                <TextView
                    android:id="@+id/tv_center33"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_chengjiaoliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交量"
                    android:textColor="#1d2737"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:id="@+id/tv_jiage_his"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格(BTC)"
                    android:textColor="#1d2737"
                    android:layout_toLeftOf="@+id/tv_center33"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tv_jiage_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textColor="#1d2737"
                    android:layout_toLeftOf="@+id/tv_center33"
                    android:layout_marginRight="105dp"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/shendutu2_recycleview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                />


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>




</RelativeLayout>